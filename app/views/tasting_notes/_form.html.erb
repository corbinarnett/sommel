<br><br>
<div class='container'>
<%= form_for @tasting_note do |f| %>
 
   <%= f.label :wine_id %>
  <%= f.collection_select(:wine_id, Wine.all, :id, :name, include_blank: true) %><br><br>
  
  <%= f.label :rating, "Rating (1-5)" %>
  <%= f.number_field :rating, in: 1..5, class: 'form-control' %>
  
  <%= f.label :comment %>
  <%= f.text_area :comment, size: "24x6", class: 'form-control' %><br>

  <%= f.submit %>

<% end %>
</div>



