<!DOCTYPE html>
<html>
  <head>
    <title>Sommel</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>

    <% if logged_in? %>
     
    <nav class="navbar navbar-expand-lg navbar-light bg-light">
      <a class="logo" > <%= link_to 'Sommel', root_path %> </a>
       <ul class="nav navbar-nav ml-auto">  
        <a class='nav-link'><%= link_to current_user.username, root_path %></a>  
        <a class='nav-link'><%= link_to 'Wine', wines_path %></a>
        <a class='nav-link'><%= link_to 'Producers', producers_path %></a>
        <a class="nav-link" ><%= link_to 'Logout', '/logout', method: :delete%></button>
        </ul>
      </nav>
    <% end %>

    <div class='container'>
    <%= yield %>
    </div>
  </body>
</html>
