<br><br>
<div class='container'>
  <%= render partial: "layouts/errors", locals: {object: @producer} %>
  <h1>Add Producer</h1>

  <%= form_for(@producer) do |f| %>
    
    <br>

    <%= f.label :name %>
    <%= f.text_field :name, class: 'form-control' %>
    <br><br>

    <%= f.label :location %>
    <%= f.text_field :location, class: 'form-control' %>
    <br><br>

      <%= f.submit "Add Producer", class: 'btn btn-primary' %>
    
  <% end %>
</div>