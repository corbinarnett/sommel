<%= form_for @wine do |f| %>
      
      <br>

      <%= f.label :name %>
      <%= f.text_field :name, class: 'form-control col-lg-4' %>
      <br><br>

      <%= f.label :vintage %>
      <%= f.text_field :vintage, class: 'form-control col-lg-4' %>
      <br><br>


      <%= f.label :producer_id %>
      <%= f.collection_select(:producer_id, Producer.all, :id, :name, include_blank: true) %>

        <%= f.submit "Add Wine" %>
      
    <% end %>
  


  